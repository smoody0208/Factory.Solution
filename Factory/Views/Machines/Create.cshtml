@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h2>Add a Machine</h2>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  @Html.LabelFor(model => model.Description)
  @Html.TextBoxFor(model => model.Description)

  @Html.Label("Add an Engineer To This Machine: ")
  @Html.DropDownList("EngineerId", (SelectList)ViewBag.EngineerId, " ")

  @Html.Label("Add a Location To This Machine: ")
  @Html.DropDownList("LocationId", (SelectList)ViewBag.LocationId, " ")

  <input type="submit" value="Add Machine" />
}

<p>@Html.ActionLink("Machine List", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>