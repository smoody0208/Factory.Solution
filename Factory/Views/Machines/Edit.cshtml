@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h2>Edit @Html.DisplayFor(model => model.Name)</h2>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)

  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  @Html.LabelFor(model => model.Description)
  @Html.TextBoxFor(model => model.Description)

  @Html.LabelFor(model => model.Complete)
  @Html.CheckBox("Complete", false)

  @Html.LabelFor(model => model.InspectionDate)
  @Html.TextBoxFor(model => model.InspectionDate, new {@type = "date"})

  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back Without Saving", "Details", new { id = Model.MachineId })</p>
<p>@Html.ActionLink("Machine List", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>