@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h2>Add Location to @Html.DisplayFor(model => model.Name)</h2>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)

  @Html.Label("Select Location:")
  @Html.DropDownList("LocationId")

  <input type="submit" value="Add Location" />
}

<p>@Html.ActionLink("Back Without Saving", "Details", new { id = Model.MachineId })</p>
<p>@Html.ActionLink("Add Engineer", "AddEngineer", new { id = Model.MachineId })</p>
<p>@Html.ActionLink("Machine List", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>