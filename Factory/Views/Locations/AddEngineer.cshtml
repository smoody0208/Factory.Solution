@{
  Layout = "_Layout";
}

@model Factory.Models.Location

<h2>Add Engineer to @Html.DisplayFor(model => model.Name)</h2>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.LocationId)

  @Html.Label("Select Engineer:")
  @Html.DropDownList("EngineerId")

  <input type="submit" value="Add Engineer" />
}

<p>@Html.ActionLink("Back Without Saving", "Details", new { id = Model.LocationId })</p>
<p>@Html.ActionLink("Add Machine", "AddMachine", new { id = Model.LocationId })</p>
<p>@Html.ActionLink("Location List", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>